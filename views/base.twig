{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}} {{ post.title|lower|replace({' ': '_'}) }}_page scroll-smooth overflow-x-hidden" data-template="base.twig">
	{% set body_classes = body_class|split(' ') %}
		{{ function('wp_body_open') }}
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
		<header class="header py-6 bg-red">
			{% block header %}
				<div class="w-full flex justify-center">
					<div>
						<h1 class="hdr-logo my-0" role="banner">
							<a class="hdr-logo-link" href="{{site.url}}" rel="home">
								{% if 'home' in body_classes %}
									<img class="max-w-20" src="/wp-content/uploads/2025/04/rtt_white_logo.png" alt="">
								{% else %}
									<img class="max-w-20" src="/wp-content/uploads/2024/03/rtt_logo_sm.png" alt="">
								{% endif %}
							</a>
						</h1>
						{# <nav id="nav-main" class="nav-main" role="navigation">
							{% include "menu.twig" with {'items': menu.get_items} %}
						</nav><!-- #nav --> #}
					</div>
				</div>
			{% endblock %}
		</header>

		<section id="content" role="main" class="content-wrapper">
			{% if title %}<h1>{{title}}</h1>{% endif %}
			<div class="wrapper">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</section>

		{% block footer %}
			<footer id="footer">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
