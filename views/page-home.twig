<script src="https://cdn.jsdelivr.net/npm/luxon@3/build/global/luxon.min.js"></script>
<script>
    const { DateTime } = luxon;

    const target = DateTime.fromObject(
        { year: 2025, month: 4, day: 18, hour: 4, minute: 33 },
        { zone: 'America/Detroit' }
    );

    const countdownSection = document.getElementById('countdown-section');
    const registrationSection = document.getElementById('registration-section');
    const heroTimer = document.getElementById('heroTimer');
    const heroLive = document.getElementById('heroLive');
    const timerEl = document.getElementById('timer');
    const timer2El = document.getElementById('timer-2');

    const x = setInterval(() => {
        const now = DateTime.now().setZone('America/Detroit');
        const diff = target.diff(now, ['days', 'hours', 'minutes', 'seconds']).toObject();

        // If it's past 9am, hide countdown, show form
        if (diff.seconds < 0) {
            clearInterval(x);
            if (countdownSection) countdownSection.style.display = 'none';
            if (registrationSection) registrationSection.classList.remove('hidden');
            if (heroTimer) heroTimer.style.display = 'none';
            if (heroLive) heroLive.classList.remove('hidden');
            return;
        }

        const days = Math.floor(diff.days || 0);
        const hours = Math.floor(diff.hours || 0);
        const minutes = Math.floor(diff.minutes || 0);
        const seconds = Math.floor(diff.seconds || 0);

        const output = `${days}d ${hours}h ${minutes}m ${seconds}s`;
        if (timerEl) timerEl.innerHTML = output;
        if (timer2El) timer2El.innerHTML = output;
    }, 1000);
</script>




